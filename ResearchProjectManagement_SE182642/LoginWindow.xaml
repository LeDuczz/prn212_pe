<Window x:Class="ResearchProjectManagement_SE182642.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE182642"
        mc:Ignorable="d"
        Title="Login Window SU 2025"
        Height="400" Width="700"
        FontFamily="Tahoma" FontSize="26"
        Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Email:" 
               FontFamily="Arial" FontSize="24"/>
        <TextBox x:Name="txtEmail" Height="32"/>

        <Label Content="Password:"
               FontFamily="Arial" FontSize="24"/>
        <PasswordBox x:Name="txtPassword" Height="32"/>

        <Button Content="Login"
                Padding="10"
                Click="Button_Click" />
    </StackPanel>
</Window>
